{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "lib": ["dom"],
    "esModuleInterop": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
